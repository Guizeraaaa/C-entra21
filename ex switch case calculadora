// See https://aka.ms/new-console-template for more information
Console.WriteLine("Hello, World!");
double numUm, numDois;
string opcao = "";
double result = 0;

Console.WriteLine("Selecione primeiro número");
numUm = Convert.ToDouble(Console.ReadLine());
Console.WriteLine("Digite a operação + - / *");
opcao = (Console.ReadLine());

Console.WriteLine("Selecione segundo número");
numDois = Convert.ToDouble(Console.ReadLine());


switch (opcao)
{
    case "+":


        result = numUm + numDois;
           
        
        break;

    case "-":
        result = numUm - numDois;
        
        break;

    case "*": 
        result = numUm * numDois;

        break;

    case "/":
        result = numUm / numDois;
    break;
}
Console.WriteLine($"O Resultado é: {result}");
