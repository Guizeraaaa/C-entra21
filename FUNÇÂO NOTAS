namespace FUNÇÂO_NOTAS
{
    internal class Program
    {


        public static double DefinirNota(double a, double b, double c, double resultado)
        {
            resultado = (a + b + c) / 3;

            
            Console.WriteLine("A sua média é de: " + resultado.ToString("F2"));

            return resultado;
        
        
        
        
        }
        
        
        
        
        static void Main(string[] args)
        {
            
        
      
            

                Console.WriteLine("Informe sua nota:");
                double varNotaUm = Convert.ToDouble(Console.ReadLine());
                double resultNota = 0;

                Console.WriteLine("Informe sua nota:");
                double varNotaDois = Convert.ToDouble(Console.ReadLine());
                

                Console.WriteLine("Informe sua nota:");
                double varNotaTres = Convert.ToDouble(Console.ReadLine());
                






                resultNota = DefinirNota(varNotaUm, varNotaDois, varNotaTres, resultNota);

                


            }
        
        
        
        
        
        }
    }
