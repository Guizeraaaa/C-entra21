namespace ConsoleApp3;

    internal class Program
    {
        public static double Somar(double a, double b) { return a + b; }
    public static double Multiplicar(double a, double b) { return a * b; }
    public static double Subtrair(double a, double b) { return a - b; }
    public static double Dividir(double a, double b) { return a / b; }


    static void Main(string[] args)
{
        double resultadoS;
    Console.WriteLine("Informe um número");
    double num = Convert.ToDouble(Console.ReadLine());

    Console.WriteLine("Informe outro número");
    double num2 = Convert.ToDouble(Console.ReadLine());

        Console.WriteLine("Escolha sua operação");
        string op = Console.ReadLine();

        switch(op) {
            case "+":
                 resultadoS = Somar(num, num2);
                Console.WriteLine(resultadoS);

                break;
                case "*":

                resultadoS = Multiplicar(num, num2);
                Console.WriteLine(resultadoS); 

                break;

                case "/": 
                resultadoS = Dividir(num, num2);
                Console.WriteLine(resultadoS);
                break;
                case "-":
                resultadoS = Subtrair(num, num2);
                Console.WriteLine(resultadoS);
                break; 
                }


    
        
        
        
        
        
        




















        }



    }
